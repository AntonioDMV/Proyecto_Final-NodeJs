        "/api/v1/users": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Traer a todos los usuarios",
                "description": "Con este endpoint podras traer todos los usuarios",
                "requestBody": {
                    "description": "Los campos que que se necesitan son la ruta",
                    "required": true
