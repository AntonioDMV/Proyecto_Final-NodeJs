    "components": {
        "schemas": {
            "login": {
                "description": "la contrase単a debe tener al menos 7 caracteres, al igual que el username",
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "example": "AntonioMV"
                    },
                    "email": {
                        "type": "string",
                        "example": "AntonioMV@gmail.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "1234567"
                    }
                }
            },
            "updateUser": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "example": "Antonio-DMV"
                    }
                }
            },
            "updateAvatar": {
                "type": "object",
                "properties": {
                    "avatar": {
                        "type": "string",
                        "example": "photo.png"
                    }
                }
            },
            "loguearse": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "example": "AntonioMV@gmail.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "1234567"
                    }
                }
            },
            "createProduct": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Monitor"
                    },
                    "description": {
                        "type": "string",
                        "example": "El mejor Monitor del mercado"
                    },
                    "price": {
                        "type": "float",
                        "example": 1999.99
                    },
                    "availableQty": {
                        "type": "integer",
                        "example": 20
                    },
                    "isAvailable": {
                        "type": "boolean",
                        "example": true
                    },
                    "userId": {
                        "type": "integer",
                        "example": 2
                    },
                    "productImage": {
                        "type": "string",
                        "example": "https://cdn.shopify.com/s/files/1/0516/1713/6830/products/X340PRO_AngleRight_1024x1024.png?v=1666363216"
                    }
                }
            },
            "updateProduct": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Monitor"
                    },
                    "description": {
                        "type": "string",
                        "example": "La mejor Monitor del mercado"
                    },
                    "availableQty": {
                        "type": "integer",
                        "example": 20
                    },
                    "status": {
                        "type": "boolean",
                        "example": true
                    },
                    "productImage": {
                        "type": "string",
                        "example": "https://cdn.shopify.com/s/files/1/0516/1713/6830/products/X340PRO_AngleRight_1024x1024.png?v=1666363216"
                    }
                }
            },
            "createOrders": {
                "type": "object",
                "properties": {
                    "usersId": {
                        "type": "integer",
                        "example": 1
                    },
                    "status": {
                        "type": "boolean",
                        "example": true
                    }
                }
            },
            "addOrder": {
                "type": "object",
                "properties": {
                    "orderId": {
                        "type": "integer",
                        "example": 1
                    },
                    "productId": {
                        "type": "integer",
                        "example": 2
                    },
                    "quantity": {
                        "type": "integer",
                        "example": 3
                    },
                    "price": {
                        "type": "integer",
                        "example": 3999.99
                    },
                    "isAvailable": {
                        "type": "boolean",
                        "example": true
                    }
                }
            },
            "createCart": {
                "type": "object",
                "properties": {
                    "idUser": {
                        "type": "integer",
                        "example": 1
                    }
                }
            },
            "addToCart": {
                "type":"object",
                "properties":{
                    "cartId": {
                        "type":"integer",
                        "example": 1
                    },
                    "productId": {
                        "type":"integer",
                        "example": 2
                    },
                    "quantity":{
                        "type":"integer",
                        "example": 1
                    },
                    "price": {
                        "type":"float",
                        "example": 1199.99
                    },
                    "isAvailable": {
                        "type":"boolean",
                        "example": true
                    }
                }
            }
        }
